        android:layout_marginRight="24dp"
        android:background="#C1BFBF"
        android:ems="10"
        android:hint="Masculino - Feminino"
        android:inputType="text"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:layout_constraintEnd_toEndOf="parent"
